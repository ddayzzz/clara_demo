{
  "epochs": 200,
  "num_training_epoch_per_valid": 2,
  "train_summary_recording_interval": 100,
  "use_scanning_window": false,
  "multi_gpu": false,
  "learning_rate": 1e-4,
  "determinism": {
    "python_seed": "20191015",
    "random_seed": 123456,
    "numpy_seed": 654321,
    "tf_seed": 11111
  },
  "use_amp": false,
  "train": {
    "loss": {
      "name": "Dice",
      "args": {
        "squared_pred": true,
        "is_onehot_targets": true
      }
    },
    "aux_ops": [
      {
        "name": "DiceMaskedOutput",
        "args": {
          "is_onehot_targets": true,
          "is_independent_predictions": true,
          "tags": [
            "dice",
            "dice_tc",
            "dice_wt",
            "dice_et"
          ]
        }
      }
    ],
    "optimizer": {
      "name": "Adam"
    },
    "lr_policy": {
      "name": "ReducePoly",
      "args": {
        "poly_power": 0.9
      }
    },
    "model": {
      "name": "SegResnet",
      "args": {
        "num_classes": 3,
        "use_vae": false,
        "blocks_down": "1,2,2,4",
        "blocks_up": "1,1,1",
        "init_filters": 16,
        "use_group_norm": true,
        "use_group_normG": 8,
        "reg_weight": 1e-5,
        "dropout_prob": 0.2,
        "final_activation": "sigmoid"
      }
    },
    "pre_transforms": [
      {
        "name": "LoadNifti",
        "args": {
          "fields": [
            "image",
            "label"
          ]
        }
      },
      {
        "name": "ConvertToChannelsFirst",
        "args": {
          "fields": [
            "image",
            "label"
          ]
        }
      },
      {
        "name": "ConvertToMultiChannelBasedOnBratsClasses",
        "args": {
          "fields": [
            "label"
          ]
        }
      },
      {
        "name": "CropFixedSizeRandomCenter",
        "args": {
          "size": [
            128,
            128,
            128
          ],
          "fields": [
            "image",
            "label"
          ]
        }
      },
      {
        "name": "RandomSpatialFlip",
        "args": {
          "fields": [
            "image",
            "label"
          ]
        }
      },
      {
        "name": "NormalizeNonzeroIntensities",
        "args": {
          "fields": "image"
        }
      },
      {
        "name": "ScaleShiftIntensity",
        "args": {
          "fields": "image"
        }
      }
    ],
    "image_pipeline": {
      "name": "SegmentationImagePipeline",
      "args": {
        "data_list_file_path": "{DATASET_JSON}",
        "data_file_base_dir": "{DATA_ROOT}",
        "data_list_key": "training",
        "output_crop_size": [
          128,
          128,
          128
        ],
        "output_label_channels": 3,
        "output_batch_size": 1,
        "output_image_channels": 4,
        "num_workers": 8,
        "prefetch_size": 10
      }
    }
  },
  "validate": {
    "metrics":
    [
        {
            "name": "ComputeAverage",
            "args": {
              "name": "mean_dice",
              "is_key_metric": true,
              "field": "dice"
            }
        },
        {
            "name": "ComputeAverage",
            "args": {
              "name": "mean_dice_tc",
              "field": "dice_tc"
            }
        },
        {
            "name": "ComputeAverage",
            "args": {
              "name": "mean_dice_wt",
              "field": "dice_wt"
            }
        },
        {
            "name": "ComputeAverage",
            "args": {
              "name": "mean_dice_et",
              "field": "dice_et"
            }
        }
    ],
    "image_pipeline": {
      "name": "SegmentationImagePipeline",
      "args": {
        "data_list_file_path": "{DATASET_JSON}",
        "data_file_base_dir": "{DATA_ROOT}",
        "data_list_key": "validation",
        "output_crop_size": [
          128,
          128,
          128
        ],
        "output_batch_size": 1,
        "output_image_channels": 4,
        "num_workers": 8,
        "prefetch_size": 1
      }
    },
    "pre_transforms": [
      {
        "name": "LoadNifti",
        "args": {
          "fields": [
            "image",
            "label"
          ]
        }
      },
      {
        "name": "ConvertToChannelsFirst",
        "args": {
          "fields": [
            "image",
            "label"
          ]
        }
      },
      {
        "name": "ConvertToMultiChannelBasedOnBratsClasses",
        "args": {
          "fields": [
            "label"
          ]
        }
      },
      {
        "name": "CropSubVolumeCenter",
        "args": {
          "size": [
            128,
            128,
            128
          ],
          "fields": [
            "image",
            "label"
          ]
        }
      },
      {
        "name": "NormalizeNonzeroIntensities",
        "args": {
          "fields": "image"
        }
      }
    ],
    "inferer": {
      "name": "TFSimpleInferer"
    }
  }
}
